<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/c_background5"/>

    <Button android:text="@string/manage_add_new" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        style="@style/main_button"
        android:id="@+id/add"/>
    <Button android:text="@string/manage_add_suggested" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add"
        style="@style/main_button"
        android:id="@+id/suggested"/>
    <Button android:text="View Streams" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suggested"
        style="@style/main_button"
        android:id="@+id/view"/>
    <Button android:text="@string/manage_livechannels" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        style="@style/main_button"
        android:id="@+id/gotoapp"/>
    <Button android:text="Sync files with Google Drive" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gotoapp"
        style="@style/main_button"
        android:id="@+id/gdrive"/>
    <Button android:text="More..." android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gdrive"
        style="@style/main_button"
        android:id="@+id/more_actions"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artist"
        style="@style/background_text_art"
        android:text="Background art by Marcelo Franceschini"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version"
        android:text="Version 1.2.0"
        style="@style/background_text_version"/>
</RelativeLayout>
