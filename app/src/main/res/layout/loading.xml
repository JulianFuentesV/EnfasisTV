<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/md_material_blue_600"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingStart="24dp"
        android:paddingBottom="24dp"
        android:id="@+id/title"
        android:fontFamily="sans-serif-light"
        android:text="Montery Bay Aquarium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingEnd="64dp"
        android:paddingBottom="24dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/channel"
        android:text="104"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The channel will be available soon."
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:id="@+id/channel_msg"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/indeterminate_progress_large_library"/>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/c_mobile"
        android:id="@+id/thumnail"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/indeterminate_progress_large_library"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:minHeight="180dp"
        android:layout_height="wrap_content" />
    <!--<ProgressBar
        android:id="@+id/indeterminate_progress_large_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Large" />-->
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/indeterminate_progress_large_library"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="#9f0"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>